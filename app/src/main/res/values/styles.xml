<resources>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="shake" >
        <item name="duration">100</item>
        <item name="android:fromDegrees">-5</item>
        <item name="android:pivotX">50%</item>
        <item name="android:pivotY">50%</item>
        <item name="android:repeatCount">infinite</item>
        <item name="android:repeatMode">reverse</item>
        <item name="android:toDegrees">5</item>
    </style>

</resources>